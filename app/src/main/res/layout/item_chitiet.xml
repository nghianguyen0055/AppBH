<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/item_imgchitiet"
                android:src="@drawable/ic_user"/>
            <LinearLayout
                android:padding="2dp"
                android:layout_toEndOf="@+id/item_imgchitiet"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_tenspchitiet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Laptop"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/item_soluongchitiet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="số lượng: 2"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/item_giachitiet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="giá: 1234"
                    android:textSize="15sp"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>